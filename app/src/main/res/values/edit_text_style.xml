<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="edit_text_layout_style" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="boxStrokeColor">@color/dark_orange</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxBackgroundColor">@color/very_light_orange</item>
        <item name="hintTextColor">@color/dark_orange</item>
        <item name="android:textColorHint">@color/dark_orange</item>
    </style>

    <style name="edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="maxLines">1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>
    </style>

</resources>