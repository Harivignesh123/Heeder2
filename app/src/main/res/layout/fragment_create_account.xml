<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AccountManager.CreateAccountFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"

        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:theme="@style/Theme.Heeder"
            android:layout_gravity="center">

<!--            <com.google.android.material.textfield.TextInputLayout-->
<!--                android:hint="@string/id_hint_text"-->
<!--                style="@style/edit_text_layout_style">-->
<!--                <com.google.android.material.textfield.TextInputEditText-->
<!--                    android:id="@+id/id_edit_text"-->
<!--                    android:inputType="text"-->
<!--                    android:maxLength="@integer/id_max_length"-->
<!--                    style="@style/edit_text_style"-->
<!--                    android:digits=" abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789-_"-->
<!--                    />-->
<!--            </com.google.android.material.textfield.TextInputLayout>-->

            <com.google.android.material.textfield.TextInputLayout
                android:hint="@string/id_hint_text"
                style="@style/edit_text_layout_style">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/id_edit_text"
                    android:inputType="text"
                    style="@style/edit_text_style"
                    />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:hint="@string/new_password_hint_text"
                app:endIconMode="password_toggle"
                style="@style/edit_text_layout_style">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/new_password_edit_text"
                    android:inputType="textPassword"
                    style="@style/edit_text_style" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:hint="@string/confirm_password_hint_text"
                app:endIconMode="password_toggle"
                style="@style/edit_text_layout_style">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/confirm_password_edit_text"
                    android:inputType="textPassword"
                    style="@style/edit_text_style" />
            </com.google.android.material.textfield.TextInputLayout>

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/student_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student"/>
                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/faculty_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Faculty"/>
            </RadioGroup>


            <Button
                android:id="@+id/create_account_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>


</FrameLayout>